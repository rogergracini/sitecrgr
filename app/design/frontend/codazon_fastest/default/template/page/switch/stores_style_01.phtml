/**
 * Store switcher template
 *
 * @see Mage_Core_Block_Store_Switcher
 */
?>

<?php if(count($this->getGroups())>1): ?>
<div class="store-switcher cdz-dropdown">
	<a class="cdz-trigger" href="javascript:void(0)">
    <?php foreach ($this->getGroups() as $_group): ?>
    	<?php if($_group->getId() == $this->getCurrentGroupId()): ?>
            <span class="store-name"><?php echo $this->escapeHtml($_group->getName()) ?></span>
        <?php endif ?>
    <?php endforeach ?>
    </a>
	<ul class="cdz-dropdown-content" style="display:none;">
	<?php foreach ($this->getGroups() as $_group): ?>
    	<?php if($_group->getId() != $this->getCurrentGroupId()): ?>
    	<li>
            <a href="<?php echo $_group->getHomeUrl() ?>">
            	<span class="store-name"><?php echo $this->escapeHtml($_group->getName()) ?></span>
            </a>
        </li>
        <?php endif ?>
    <?php endforeach; ?>
    </ul>
</div>
<?php endif; ?>