/**
 * Currency switcher
 *
 * @see Mage_Directory_Block_Currency
 */
?>

<?php if($this->getCurrencyCount()>1): ?>
<div class="store-currency cdz-dropdown">
	<a class="cdz-trigger" href="javascript:void(0)" title="<?php echo Mage::helper('core')->quoteEscape($this->__('Select Your Currency')) ?>">
    <?php foreach ($this->getCurrencies() as $_code => $_name): ?>
    	<?php if($_code == $this->getCurrentCurrencyCode()): ?>
            <span><?php echo $_code ?></span>
        <?php endif ?>
    <?php endforeach ?>
    </a>
	<ul class="cdz-dropdown-content" style="display:none;">
	<?php foreach ($this->getCurrencies() as $_code => $_name): ?>
    	<?php if($_code != $this->getCurrentCurrencyCode()): ?>
    	<li>
            <a href="<?php echo $this->getSwitchCurrencyUrl($_code) ?>">
            	<span><?php echo $_code ?></span>
            </a>
        </li>
        <?php endif ?>
    <?php endforeach ?>
    </ul>
</div>
<?php endif; ?>
