$helper = $this->helper('customer');
$suffix = $this->getSuffix();
?>
<div class="block block-login">
    <div class="block-title">
        <strong><span><?php echo $this->__('Login') ?></span></strong>
    </div>
    <form action="<?php echo $helper->getLoginPostUrl(); ?>" method="post">
		<input name="form_key" type="hidden" value="<?php echo Mage::getSingleton('core/session')->getFormKey() ?>" />
        <div class="block-content">
			<div class="form-list">
				<div class="field">
					<label for="mini-login"><?php echo $this->__('Email:') ?></label>
					<input type="text" name="login[username]" id="mini-login<?php echo $suffix ?>" class="input-text" />
				</div>
				<div class="field">
					<label for="mini-password"><?php echo $this->__('Password:') ?></label>
					<input type="password" name="login[password]" id="mini-password<?php echo $suffix ?>" class="input-text" />
				</div>
			<ul class="remember-me">
				<?php echo $this->getChild('persistent.remember.me')->setSuffix($suffix)->toHtml() ?>
			</ul>
			</div>
            <div class="actions">
                <button type="submit" class="button"><span><span><?php echo $this->__('Login') ?></span></span></button>
            </div>
			<div class="forgot-password">
			<a href="<?php echo $this->getUrl('customer/account/forgotpassword') ?>" class="f-left"><?php echo $this->__('Forgot your password?') ?></a>
			</div>
        </div>
    </form>
</div>
